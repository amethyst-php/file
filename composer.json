{
    "name": "amethyst/file",
    "keywords": ["laravel", "amethyst", "amethyst-file", "file"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "amethyst/common": "0.1.*",
        "spatie/laravel-medialibrary": "^7.0.0",
        "ramsey/uuid": "^3.8",
        "dflydev/apache-mime-types": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.1",
        "orchestra/testbench": "3.*"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\FileServiceProvider"
            ]
        }
    }
}
