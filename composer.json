{
    "name": "amethyst/file",
    "keywords": ["laravel", "amethyst", "amethyst-file", "file"],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "amethyst/core": "0.3.*",
        "dflydev/apache-mime-types": "^1.0",
        "ramsey/uuid": "^3 || ^4",
        "spatie/laravel-medialibrary": "^10.0 || ^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "orchestra/testbench": "*"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\FileServiceProvider"
            ]
        }
    }
}
